<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.warpgatetechnologies.junglereservations.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Current_Reservation"
        android:id="@+id/current_reservations_text_view"
        android:textSize="24sp"
        android:background="@color/colorPrimaryDark"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:elevation="8dp"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/request_reservation"
        android:textAlignment="gravity"
        android:id="@+id/request_reservation_text_view"
        android:textSize="24sp"
        android:background="#F68B1F"
        android:gravity="center"
        android:foregroundGravity="left|bottom"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:elevation="8dp"/>

</LinearLayout>
